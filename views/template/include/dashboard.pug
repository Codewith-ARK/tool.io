include ../partials/header
include ../partials/mixin

div(class="drawer lg:drawer-open")
  input#my-drawer.drawer-toggle(type='checkbox')
  .drawer-content
    label(for='my-drawer' class="drawer-button btn btn-primary absolute left-0 rounded-none rounded-br-lg")
      svg(width="20" height="20" xmlns="http://www.w3.org/2000/svg" fill="black" viewBox="0 0 24 24" class="inline-block h-5 w-5 stroke-current md:h-6 md:w-6")
        path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16")

    section(class="py-16 px-4")
      block body
  .drawer-side
    label.drawer-overlay(for='my-drawer', aria-label='close sidebar')
    ul(class="menu bg-base-200 text-base text-base-content min-h-full w-80 p-4 flex flex-col justify-between")
      // Sidebar content here
      div 
        li: a(href="/app") Home
        li: a(href="/post/view/all") Posts
        li: a(href="/user/profile") Profile
      li: a(href="/logout" onclick="handleLogout()") Logout

script(src="/js/index.js") 